<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFE8"
    tools:context=".BMIResult">

    
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemBackground="@color/dark_green"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu_navigation"
        android:layout_alignParentBottom="true"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="80sp"
        android:background="@drawable/bmilogo">
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="125dp"
        android:text="BMI"
        android:textSize="31sp"
        android:textColor="#0A5E2A"
        android:fontFamily="@font/opensans_bold">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="187dp"
        android:text="Calculator"
        android:textSize="30sp"
        android:textColor="#0A5E2A"
        android:fontFamily="@font/opensans_regular">
    </TextView>

    <RelativeLayout
        android:id="@+id/result_layout"
        android:layout_width="match_parent"
        android:layout_height="615dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="68dp"
        android:background="#44CB17">

        <TextView
            android:id="@+id/result_text0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/opensans_bold"
            android:text="RESULT"
            android:textColor="#000000"
            android:textSize="35sp">
        </TextView>

        <ImageView
            android:id="@+id/result_image"
            android:layout_width="150dp"
            android:layout_height="250dp"
            android:layout_below="@id/result_text0"
            android:layout_centerHorizontal="true"
            android:padding="15dp"
            android:src="@drawable/body">
        </ImageView>

        <TextView
            android:id="@+id/result_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/result_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/opensans_bold"
            android:textColor="#000000"
            android:textSize="40sp">
        </TextView>

        <TextView
            android:id="@+id/result_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/result_text1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/opensans_bold"
            android:text="@string/result_text2"
            android:textColor="#000000"
            android:textSize="70sp">
        </TextView>

    </RelativeLayout>

    <android.widget.Button
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="560dp"
        android:background="@drawable/recalculate_layout"
        android:text="@string/recalculate_bmi"
        android:textSize="20sp"
        android:textColor="#EFEFE8"
        android:fontFamily="@font/opensans_bold"
        android:id="@+id/layout_recalculate">
    </android.widget.Button>

    <android.widget.Button
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="617dp"
        android:background="@drawable/recalculate_layout"
        android:text="@string/save_bmi"
        android:textSize="20sp"
        android:textColor="#EFEFE8"
        android:fontFamily="@font/opensans_bold"
        android:id="@+id/layout_save">
    </android.widget.Button>

</RelativeLayout>